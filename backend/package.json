{
  "name": "spur-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm ci && tsc -p tsconfig.json && npm run copy-assets",
    "copy-assets": "mkdir -p dist/db && cp src/db/schema.sql dist/db/",
    "start": "node dist/server.js",
    "init-db": "tsx src/scripts/init-db.ts",
    "test-neon": "tsx src/scripts/test-neon-connection.ts",
    "test-redis": "tsx src/scripts/test-upstash-redis.ts",
    "postbuild": "npm run init-db"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "gpt-tokenizer": "^3.4.0",
    "openai": "^4.73.1",
    "pg": "^8.16.3",
    "redis": "^4.7.0",
    "typescript": "^5.7.2",
    "winston": "^3.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsx": "^4.19.2"
  }
}
